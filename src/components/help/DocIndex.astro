---

<BaseLayout title={node.title} bg="bg-white">
  <DocDrawer
    node={rootNode}
    slug={slug}
    client:only="react"
    slot="small-header-left"
  />

  <TocMenu slot="small-header-bottom" client:only="react" />

  <main
    slot="main"
    class="mx-auto grid min-h-screen w-4/5 grid-cols-1 gap-8 lg:grid-cols-5 xl:w-2/3"
  >
    <aside
      class="sticky top-20 hidden h-screen overflow-x-hidden overflow-y-auto lg:block"
      style={{ height: 'calc(100vh - 5rem)' }}
    >
      <DocTreeNode
        node={rootNode}
        slug={slug}
        client:only="react"
        className="text-sm"
      />
    </aside>

    <BaseCol className="min-h-screen gap-y-8 lg:col-span-3">
      <DocCrumb slug={slug} />

      <h1 class="text-xl font-bold">{node.title}</h1>

      <ol class="flex grid shrink-0 grid-cols-2 gap-8 text-sm">
        {
          node.children.map((c) => {
            return (
              <li>
                <a
                  href={`/docs/${c.slug.join('/')}`}
                  class="border-border rounded-theme flex h-full flex-col gap-y-1 border p-8 transition-shadow duration-300 ease-in-out hover:shadow-sm"
                >
                  <span class="font-semibold">{c.title}</span>

                  <span class="text-foreground/70 text-sm">
                    {c.description}
                  </span>
                </a>
              </li>
            )
          })
        }
      </ol>
    </BaseCol>
  </main>
</BaseLayout>
