---
import { SITE_TITLE } from '../consts'
import { HelpAutocompleteQuery } from './help/help-autocomplete'
import { HCenterRow } from './layout/h-center-row'
import { VCenterRow } from './layout/v-center-row'
import { ThemeToggle } from './theme-toggle'
---

<header class="bg-background/25 sticky top-0 z-50 h-18 px-4 backdrop-blur-md">
  <nav class="grid grid-cols-1 items-center gap-4 lg:grid-cols-4">
    <h2 class="text-lg font-bold">
      <a href="/" class="flex items-center gap-2"
        ><img src="/favicon.svg" alt={SITE_TITLE} class="h-9 w-9" />
        {SITE_TITLE}
      </a>
    </h2>

    <HCenterRow className="col-span-2 py-4">
      <HelpAutocompleteQuery className="w-3/4" client:only="react" />
    </HCenterRow>

    <VCenterRow className="justify-end gap-4">
      <ThemeToggle client:only="react" />
    </VCenterRow>
  </nav>
</header>
